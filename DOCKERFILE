# Use an official Node.js runtime as a parent image
FROM node:14

# Set the working directory to /app
WORKDIR /app

# Copy package.json and package-lock.json files from the server directory
COPY server/package*.json ./server/

# Install server dependencies
RUN npm install --prefix ./server

# Copy the server directory contents into the container
COPY server ./server

# Set the working directory for the client
WORKDIR /app/client

# Copy package.json and package-lock.json files from the client directory
COPY client/package*.json ./

# Install client dependencies
RUN npm install

# Copy the client directory contents into the container
COPY client ./

# Build the client
RUN npm run build

# Move build files to the server's public directory
RUN cp -r build ../server/public

# Set the working directory back to /app/server
WORKDIR /app/server

# Expose port 5000
EXPOSE 5000

# Start the server
CMD ["node", "index.js"]
