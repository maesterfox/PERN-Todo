# Use an official Node.js runtime as a parent image
FROM node:14

# Set the working directory to /app
WORKDIR /app

# Copy the server directory contents into the container at /app/server
COPY server/package*.json ./server/
COPY server/ ./

# Install server dependencies
RUN npm install

# Set the working directory for the client
WORKDIR /app/client

# Copy the client directory contents into the container at /app/client
COPY client/package*.json ./
COPY client/ ./

# Install client dependencies
RUN npm install

# Build the client
RUN npm run build

# Move build files to the server public directory
RUN cp -r build/* ../server/public/

# Set the working directory back to /app/server
WORKDIR /app/server

# Expose port 5000
EXPOSE 5000

# Start the server
CMD ["node", "index.js"]
