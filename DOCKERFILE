# Use an official Node.js runtime as a parent image
FROM node:18

# Set the working directory to /app
WORKDIR /app

# Copy server package.json and package-lock.json files to the container
COPY server/package*.json ./server/

# Install server dependencies
RUN npm install --prefix ./server

# Copy client package.json and package-lock.json files to the container
COPY client/package*.json ./client/

# Install client dependencies
RUN npm install --prefix ./client

# Copy the rest of the server and client directories into the container
COPY server ./server
COPY client ./client

# Build the client
WORKDIR /app/client
RUN npm run build

# Move build files to the server's public directory
RUN cp -r build ../server/public

# Set the working directory back to /app/server
WORKDIR /app/server

# Expose port 5000
EXPOSE 5000

# Start the server
CMD ["node", "index.js"]
